{
  "license": "MIT",
  "dependencies": {
    "@syncano/core": "^0.11.0-alpha.4f8885a3"
  },
  "scripts": {
    "build": "npm install && npm run build:src && npm run build:env",
    "build:src": "sh ./bin/compile",
    "build:env": "sh ./bin/compile-env",
    "test": "yarn && npm-run-all --parallel test:lint test:e2e:coverage",
    "test:e2e-single": "cross-env NODE_ENV=test mocha -s 1800 --reporter spec --require babel-register --timeout 4000",
    "test:e2e-single:coverage": "nyc --produce-source-map=true cross-env NODE_ENV=test mocha -s 1800 --reporter spec --require babel-register --timeout 4000",
    "test:e2e": "npm run test:e2e-single 'tests/*.test.js'",
    "test:e2e:coverage": "nyc --produce-source-map=true npm run test:e2e",
    "test:lint": "standard --fix"
  },
  "devDependencies": {
    "@syncano/test": "canary",
    "@syncano/test-tools": "canary",
    "babel-core": "^6.26.0",
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "lodash.merge": "^4.6.1",
    "mocha": "^3.5.3",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.2.1",
    "sinon": "^4.4.6",
    "standard": "^10.0.3"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "7"
          }
        }
      ]
    ]
  }
}
